{
  "extends": "./tsconfig.json",
  "include": [
    "./lib/**/*"
  ],
  "exclude": [
    "**/dist/**"
  ],
  "compilerOptions": {
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": true
  }
}
